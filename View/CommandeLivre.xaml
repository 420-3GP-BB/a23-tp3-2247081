<Window x:Class="View.CommandeLivre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="CommandeLivre" 
        Height="300" 
        Width="625"
        WindowStartupLocation="CenterScreen">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:CommandeLivre.ConfirmerCmd}"
                        Executed="ConfirmerCommande_Executed"
                        CanExecute="ConfirmerCommande_CanExecute"/>
    </Window.CommandBindings>
    <Grid>
        <StackPanel
            Orientation="Vertical">
            <TextBlock
                HorizontalAlignment="Center"
                Text="Entrez les informations sur le livre:"
                FontSize="25"
                FontWeight="Bold"
                />
            <StackPanel
                Orientation="Horizontal"
                Margin="10">
                <TextBlock
                    Text="ISBN-13:"
                    Margin="0,0,20,0"
                    />
                <TextBox
                    x:Name="_entryISBN13"
                    Width="500"
                    />
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Margin="10">
                <TextBlock
                    Text="Titre:"
                    Margin="0,0,40,0"
                    />
                <TextBox
                    x:Name="_entryTitre"
                    Width="500"
                    />
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Margin="10">
                <TextBlock
                    Text="Auteur:"
                    Margin="0,0,27.5,0"
                    />
                <TextBox
                    x:Name="_entryAuteur"
                    Width="500"
                    />
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Margin="10"
                >
                <TextBlock
                    Text="Éditeur:"
                    Margin="0,0,25,0"
                    />
                <TextBox
                    x:Name="_entryEditeur"
                    Width="500"
                    />
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Margin="10">
                <TextBlock
                    Text="Année:"
                    Margin="0,0,27.5,0"
                    />
                <TextBox
                    x:Name="_entryAnnee"
                    Width="500"
                    />
            </StackPanel>
            <ToggleButton
                Command="{x:Static local:CommandeLivre.ConfirmerCmd}"
                Width="200"
                Content="Comfirmer la commande"
                />
        </StackPanel>
    </Grid>
</Window>
